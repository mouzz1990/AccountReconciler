<UserControl x:Class="AccountReconcilerLibrary.DetailsSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccountReconcilerLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="DetMainCotnrol">
    <ScrollViewer>
        <Grid HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Name="txbTitle" Margin="5" Text=""></TextBlock>
                <TextBox VerticalAlignment="Center" Name="tbTitleText" Width="200" Margin="5" TextChanged="tbTitleText_TextChanged"></TextBox>
                <Button Name="btnAdd" Width="30" Height="30" Margin="5" Click="btnAdd_Click">+</Button>
            </StackPanel>
            <StackPanel Grid.Row="1" Name="stcScnd">

            </StackPanel>
            <!--<Button Click="Button_Click" Grid.Row="2">ShowResult</Button>-->
        </Grid>
    </ScrollViewer>
</UserControl>
